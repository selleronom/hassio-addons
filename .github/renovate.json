{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "Europe/Stockholm",
    "schedule": [
        "before 6am every weekday"
    ],
    "labels": [
        "dependencies"
    ],
    "commitMessagePrefix": "⬆️",
    "commitMessageTopic": "{{depName}}",
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update Alpine packages in Dockerfiles",
            "managerFilePatterns": [
                "/(^|/)Dockerfile$/"
            ],
            "matchStrings": [
                "(?<depName>[a-z][a-z0-9_-]*)=(?<currentValue>[0-9]+\\.[0-9]+[^\\s\\\\]*)"
            ],
            "packageNameTemplate": "alpine_edge/{{depName}}",
            "datasourceTemplate": "repology",
            "versioningTemplate": "loose"
        },
        {
            "customType": "regex",
            "description": "Update versioned dependencies",
            "managerFilePatterns": [
                "/(^|/)Dockerfile$/"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+(?:ARG|ENV) .*?_VERSION=(?<currentValue>.*)\\s"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "repology"
            ],
            "automerge": false,
            "groupName": "Alpine packages"
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "description": "Group all add-on updates together",
            "matchFileNames": [
                "**/Dockerfile"
            ],
            "groupName": "Add-on dependencies"
        },
        {
            "description": "Group GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "GitHub Actions"
        }
    ]
}
